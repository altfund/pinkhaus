default:
    just check

# Install dependencies
install:
    uv sync

# Apply those lints which can be fixed automatically.
fix:
    uv run ruff check --fix .

# Run linting
lint:
    uv run ruff check .

# Format code
format:
    uv run ruff format .

# Check linting and formatting
check:
    uv run ruff check .
    uv run ruff format --check .

# test
test:
    uv run pytest

# Generate Python code from proto files
proto-generate:
    uv run python scripts/generate_proto.py

# Verify that generated proto files match checked-in versions
proto-verify:
    uv run python scripts/verify_proto.py
